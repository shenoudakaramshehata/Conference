@page
@model Conference.Areas.Admin.Pages.Configurations.SiteCategories.IndexModel
@Html.AntiForgeryToken()
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
}

@{
    ViewBag.Title = "الفعاليات";
    ViewBag.pTitle = "الفعاليات";
    ViewBag.pageTitle = "الفعاليات";
}

<partial name="_DatchDelete" model="@Model.eventRecord" view-data="ViewData" />
<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 ">
        <!--begin::Toolbar container-->
        <div id="kt_app_toolbar_container" class="app-container  container-fluid d-flex flex-stack ">
            <!--begin::Page title-->
            <div data-kt-swapper="true" data-kt-swapper-mode="{default: 'prepend', lg: 'prepend'}" data-kt-swapper-parent="{default: '#kt_app_content_container', lg: '#kt_app_toolbar_container'}" class="page-title d-flex flex-column justify-content-center flex-wrap me-3 mb-5 mb-lg-0">
                <!--begin::Title-->
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">
                    الفعاليات
                </h1>
                <!--end::Title-->
            </div>
            <!--end::Page title-->
            <!--begin::Action group-->
            <div class="d-flex align-items-center gap-2">
                <div class="d-flex align-items-center gap-2 gap-lg-3">
                    <button type="button" class="btn btn-sm btn-light-primary" data-bs-toggle="modal" id="create-btn" data-bs-target="#AddModal">
                        <i class="ki-duotone ki-plus fs-2"></i> أضافة فعالية
                    </button>
                    <!--end::Primary button-->
                </div>
            </div>
            <!--end::Action group-->
        </div>
        <!--end::Toolbar container-->
    </div>
    <div id="kt_app_content" class="app-content  flex-column-fluid ">


        <!--begin::Content container-->
        <div id="kt_app_content_container" class="app-container  container-fluid ">

            <div class="card">

                <div class="card-body">
                    <table id="tblList" class="table table-striped table-row-bordered gy-5 gs-7 border rounded">
                        <thead>
                            <tr class="fw-bold fs-6 text-gray-800 px-7">
                                <th hidden>id</th>
                                <th class="min-w-125px">تاريخ الفعالية</th>
                                <th class="min-w-200px">اسم الفعالية</th>

                                <th class="min-w-125px">موقع الفعالية</th>
                                <th class="min-w-125px">نشط</th>
                                <th class="min-w-125px text-end">إجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>


                </div>

            </div>

        </div>

    </div>
</div>

<partial name="_EditPopup" model="@Model.eventRecord" view-data="ViewData" />
<partial name="_AddPopup" model="@Model.eventRecord" view-data="ViewData" />
<partial name="_ViewPopup" model="@Model.eventRecord" view-data="ViewData" />


<script src="~/Other/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#tblList").DataTable({
            "proccessing": true,
            "serverSide": true,
            "ajax": {

                url: "/admin/Events/Index",
                type: 'POST',
                headers: { 'XSRF-TOKEN': $('@Html.AntiForgeryToken()').val() }
            },
            "columnDefs": [
                {
                    "targets": -1,
                    "data": null,
                    "render": function (data, type, row, meta) {
                        const linkHtml = `<a href="javascript:void(0)" data-bs-toggle="modal" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1">
                                                                        <i class="ki-duotone ki-eye fs-2x" onclick="ShowViewPopUp(${row.EventId})">
                                                                                                <span class="path1"></span>
                                                                                        <span class="path2"></span>
                                                                                        <span class="path3"></span>
                                                                                        </i>

                                                                            </a>
                                                                            <a class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1" href="javascript:void(0)" data-bs-toggle="modal">
                                                                                                <i class="ki-duotone ki-pencil fs-2" onclick="editButtonClick(${row.EventId})">
                                                                                    <span class="path1"></span>
                                                                                    <span class="path2"></span>
                                                                                </i>
                                                                            </a>

                                                                            <a href="#" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm" data-bs-toggle="modal" href="javascript:void(0)">
                                                                                                    <i class="ki-duotone ki-trash fs-2" onclick="deleteEvent(${row.EventId})">
                                                                                    <span class="path1"></span>
                                                                                    <span class="path2"></span>
                                                                                    <span class="path3"></span>
                                                                                    <span class="path4"></span>
                                                                                    <span class="path5"></span>
                                                                                </i>
                                                                            </a>

                                                                             <a href="@Model.url/${row.QRCodeImage}" class="btn btn-sm fw-bold btn-primary" target="_blank">
    @sharedResource["QRCode"]
                                                                            </a>
                                                                              <a href="/Admin/EventSingleActivites/index?id=${row.EventId}" class="btn btn-sm fw-bold btn-danger" >
       الانشطة
                                                                           </a>
                                                                                <a href="/Admin/EventSubscriptions/index?id=${row.EventId}" class="btn btn-sm fw-bold btn-secondary" >
           الإشتركات
                                                                          </a>
                                                                                       </a>
                                                                                                <a href="${row.QRCodeName}" class="btn btn-sm fw-bold btn-warning" >
               معاينة
                                                                              </a>

                                                                            `;
                        return linkHtml;
                    },
                    "sortable": false
                },
                { "name": "EventId", "data": "EventId", "targets": 0, "visible": false },
                //{
                //    "name": "EventDate", "data": "EventDate", "targets":1,

                //    "render": function (data, type, row, meta) {

                //        return (row.EventDate.getMonth() + 1) + "/" + row.EventDate.getDate() + "/" + row.EventDate.getFullYear();
                //    }

                //}
                { "name": "EventDate", "data": "EventDate", "targets": 1 },
                { "name": "EventTitle", "data": "EventTitle", "targets": 2, "visible": true },
                { "name": "EventLocation", "data": "EventLocation", "targets": 3 },
                {
                    "name": "EventIsActive", "data": "EventIsActive", "targets": 4,

                    "render": function (data, type, row, meta) {
                        if (row.EventIsActive) {
                            return `<span class="badge badge-light-success fs-7 fw-bold">@sharedResource["Active"]</span>`;
                        } else {
                            return `<span class="badge badge-light-danger fs-7 fw-bold">@sharedResource["Not Active"]</span>`;
                        }
                    }

                }



            ],
            "order": [[2, "desc"]],
            "language": {
                "lengthMenu": "Show _MENU_",
            },
            "dom":
                "<'row'" +
                "<'col-sm-6 d-flex align-items-center justify-conten-start'l>" +
                "<'col-sm-6 d-flex align-items-center justify-content-end'f>" +
                ">" +

                "<'table-responsive'tr>" +

                "<'row'" +
                "<'col-sm-12 col-md-5 d-flex align-items-center justify-content-center justify-content-md-start'i>" +
                "<'col-sm-12 col-md-7 d-flex align-items-center justify-content-center justify-content-md-end'p>" +
                ">",
            "createdRow": function (row, data, dataIndex) {
                var tdElements = $(row).find('td');
                $(tdElements[tdElements.length - 1]).addClass('text-end');
            }
        });
    });

    function editButtonClick(EventId) {
        console.log(EventId)
        $.ajax({
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            }
            ,
            url: "/admin/Events/Index?handler=SingleEventForEdit",

            data: { "EventId": EventId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                //document.getElementById("PicId").src = response.QRCodeImage

                document.getElementById("HiddenId").value = response.EventId
                document.getElementById("DEventVideoId").value = response.EventVideo
                document.getElementById("AssignEventVideoId").src = "/" + response.EventVideo
                document.getElementById("DIndividualImageId").src = "/" + response.IndividualImage
                document.getElementById("DAudianceImageId").src = "/" + response.AudianceImage
                document.getElementById("DQueueImageId").src = "/" + response.QueueImage
                document.getElementById("AssIndividualImageId").value = response.IndividualImage
                document.getElementById("AssAudianceImageId").value = response.AudianceImage
                document.getElementById("AssQueueImageId").value = response.QueueImage
                document.getElementById("DEventBarcodeId").value = response.EventBarcode
                document.getElementById("DEventTitleId").value = response.EventTitle
                document.getElementById("DEventLocationId").value = response.EventLocation
                document.getElementById("DQRCodeImageId").value = response.QRCodeImage
                document.getElementById("DQRCodeNameId").value = response.QRCodeName
                document.getElementById("DEventDateId").value = response.EventDate
                document.getElementById("DEventIsActiveId").checked = response.EventIsActive

                //document.getElementById("DEventVideoId").value = response.EventVideo


                $('#showEditModal').modal('show');


            },

            failure: function (response) {
                alert(response);
            }
        });
    }

    //// === VIEW ===//
    function ShowViewPopUp(EventId) {

        $.ajax({
            type: "GET",
            url: "/admin/Events/Index?handler=SingleEventForView",
            data: { "EventId": EventId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {

                document.getElementById("PicId").src = "/" + response.QRCodeImage
                document.getElementById("EventTitleId").innerHTML = response.EventTitle
                document.getElementById("EventLocationId").innerHTML = response.EventLocation
                document.getElementById("EventDateId").innerHTML = response.EventDate
                document.getElementById("EventBarcodeId").innerHTML = response.EventBarcode
                document.getElementById("EventVideoId").src = "/" + response.EventVideo
                document.getElementById("IndividualImageId").src = "/" + response.IndividualImage
                document.getElementById("AudianceImageId").src = "/" + response.AudianceImage
                document.getElementById("QueueImageId").src = "/" + response.QueueImage
                if (response.EventIsActive == true) {
                    document.getElementById("DIsActiveId").innerHTML = "نشط"

                }
                else {
                    document.getElementById("DIsActiveId").innerHTML = "غير نشط"
                }


                $('#QuickViewPoup').modal('show');
                console.log(response);
            },
            failure: function (response) {
                alert(response);
            }
        });

    }

    function QRCodeEvent(EventId) {
        console.log(EventId)
        $.ajax({
            type: "GET",
            url: "/admin/Events/Index?handler=SingleEventQRCodeForView",
            data: { "EventId": EventId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {

                //console.log(response.QRCodeImage)
                var image = new Image();
                image.src = response.QRCodeImage;
                image.height = "250";
                image.width = "250";

                var w = window.open("");
                w.document.write(image.outerHTML);
                //var largeImage = document.getElementById('largeImage');
                //image.style.display = 'block';
                //image.style.width = 200 + "px";
                //image.style.height = 200 + "px";
                //var url = response.QRCodeImage;
                //window.open(url, 'Image', 'width=image.width,height=image.height,resizable=1');
            },
            failure: function (response) {
                alert(response);
            }
        });


    }
    function deleteEvent(EventId) {

        console.log(EventId)
        $.ajax({
            type: "GET",
            url: "/Admin/Events/Index?handler=SingleEventForDelete",
            data: { "EventId": EventId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementById("DeleteEventId").value = response.EventId
                $('#deleteRecordModal').modal('show');


            },
            failure: function (response) {
                alert(response);
            }
        });
    }
</script>
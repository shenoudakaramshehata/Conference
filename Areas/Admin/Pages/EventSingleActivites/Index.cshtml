@model Conference.Areas.Admin.Pages.EventSingleActivites.IndexModel
@Html.AntiForgeryToken()
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
}

@{
    ViewBag.Title = "انشطة الفعاليات";
    ViewBag.pTitle = "انشطة الفعاليات";
    ViewBag.pageTitle = "انشطة الفعاليات";
}
<partial name="_DatchDelete" model="@Model.EventActivitySingleRecord" view-data="ViewData" />

<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 ">
        <!--begin::Toolbar container-->
        <div id="kt_app_toolbar_container" class="app-container  container-fluid d-flex flex-stack ">
            <!--begin::Page title-->
            <div data-kt-swapper="true" data-kt-swapper-mode="{default: 'prepend', lg: 'prepend'}" data-kt-swapper-parent="{default: '#kt_app_content_container', lg: '#kt_app_toolbar_container'}" class="page-title d-flex flex-column justify-content-center flex-wrap me-3 mb-5 mb-lg-0">
                <!--begin::Title-->
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">
                    انشطة الفعاليات
                </h1>
                <!--end::Title-->
            </div>
            <!--end::Page title-->
            <!--begin::Action group-->
            <div class="d-flex align-items-center gap-2">
                <div class="d-flex align-items-center gap-2 gap-lg-3">
                    <button type="button" class="btn btn-sm btn-light-primary" data-bs-toggle="modal" id="create-btn" data-bs-target="#AddModal">
                        <i class="ki-duotone ki-plus fs-2"></i> أضافة نشاط للفعالية
                    </button>
                    <!--end::Primary button-->
                </div>
            </div>
            <!--end::Action group-->
        </div>
        <!--end::Toolbar container-->
    </div>
    <div id="kt_app_content" class="app-content  flex-column-fluid ">


        <!--begin::Content container-->
        <div id="kt_app_content_container" class="app-container  container-fluid ">

            <div class="card">

                <div class="card-body">
                    <table id="tblList" class="table table-striped table-row-bordered gy-5 gs-7 border rounded">
                        <thead>
                            <tr class="fw-bold fs-6 text-gray-800 px-7">
                                <th hidden>id</th>
                                <th class="min-w-125px">عنوان النشاط</th>
                                <th class="min-w-200px">نوع النشاط</th>
                               @* <th class="min-w-200px">وصف النشاط</th>*@
                                <th class="min-w-200px">اسم الفعالية</th>
                                
                                <th class="min-w-125px text-end">إجراءات</th>

                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>


                </div>

            </div>

        </div>

    </div>
</div>
<partial name="_EditPopup" model="@Model.EventActivitySingleRecord" view-data="ViewData" />
<partial name="_AddPopup" model="@Model.EventActivitySingleRecord" view-data="ViewData" />
<partial name="_ViewPopup" model="@Model.EventActivitySingleRecord" view-data="ViewData" />


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#tblList").DataTable({
            "proccessing": true,
            "serverSide": true,
            "ajax": {

                url: "/admin/EventSingleActivites/Index",
                type: 'POST',
                headers: { 'XSRF-TOKEN': $('@Html.AntiForgeryToken()').val() }
            },
            "columnDefs": [
                {
                    "targets": -1,
                    "data": null,
                    "render": function (data, type, row, meta) {
                        return `
                                                    <a href="javascript:void(0)" data-bs-toggle="modal" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1">
                                                                                                        <i class="ki-duotone ki-eye fs-2x" onclick="ShowViewPopUp(${row.EventActivityId})">
                                                                                                                            <span class="path1"></span>
                                                                                                                    <span class="path2"></span>
                                                                                                                    <span class="path3"></span>
                                                                                                                    </i>

                                                                                                        </a>
                                                                                                        <a class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1" href="javascript:void(0)" data-bs-toggle="modal">
                                                                                                                                <i class="ki-duotone ki-pencil fs-2" onclick="editButtonClick(${row.EventActivityId})">
                                                                                                                <span class="path1"></span>
                                                                                                                <span class="path2"></span>
                                                                                                            </i>
                                                                                                        </a>

                                                                                                    <a href="#" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm" data-bs-toggle="modal" href="javascript:void(0)">
                                                                                                                                    <i class="ki-duotone ki-trash fs-2" onclick="deleteEventActivity(${row.EventActivityId})">
                                                                                                            <span class="path1"></span>
                                                                                                            <span class="path2"></span>
                                                                                                            <span class="path3"></span>
                                                                                                            <span class="path4"></span>
                                                                                                            <span class="path5"></span>
                                                                                                        </i>
                                                                                                    </a>



                                                                                                    `;
                    },
                    "sortable": false
                },
                { "name": "EventActivityId", "data": "EventActivityId", "targets": 0, "visible": false },
                { "name": "EventActivityTitle", "data": "EventActivityTitle", "targets": 1, "visible": true },
               // { "name": "EventActivityDescription", "data": "EventActivityDescription", "targets": 2 },
                { "name": "EventActivityType", "data": "EventActivityType", "targets": 2 },
                { "name": "EventTitle", "data": "EventTitle", "targets": 3 }
               



            ],
            "order": [[3, "desc"]],
            "language": {
                "lengthMenu": "Show _MENU_",
            },
            "dom":
                "<'row'" +
                "<'col-sm-6 d-flex align-items-center justify-conten-start'l>" +
                "<'col-sm-6 d-flex align-items-center justify-content-end'f>" +
                ">" +

                "<'table-responsive'tr>" +

                "<'row'" +
                "<'col-sm-12 col-md-5 d-flex align-items-center justify-content-center justify-content-md-start'i>" +
                "<'col-sm-12 col-md-7 d-flex align-items-center justify-content-center justify-content-md-end'p>" +
                ">",
            "createdRow": function (row, data, dataIndex) {
                var tdElements = $(row).find('td');
                $(tdElements[tdElements.length - 1]).addClass('text-end');
            }
        });
    });

    function deleteEventActivity(EventActivityId) {

        console.log(EventActivityId)
        $.ajax({
            type: "GET",
            url: "/Admin/EventSingleActivites/Index?handler=SingleEventActivityForDelete",
            data: { "EventActivityId": EventActivityId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementById("DeleteEventActivityId").value = response.EventActivityId
                $('#deleteRecordModal').modal('show');


            },
            failure: function (response) {
                alert(response);
            }
        });
    }
    function editButtonClick(EventActivityId) {
        console.log(EventActivityId)
        $.ajax({
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            }
            ,
            url: "/admin/EventSingleActivites/Index?handler=SingleEventActivityForEdit",

            data: { "EventActivityId": EventActivityId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {

                document.getElementById("HiddenId").value = response.EventActivityId
                document.getElementById("DEventActivityTitleId").value = response.EventActivityTitle
                document.getElementById("DEventActivityDescriptionId").value = response.EventActivityDescription
                document.getElementById("DEventActivityTypeId").value = response.EventActivityType
                document.getElementById("EventHiddenId").value = response.EventId
                $('#showEditModal').modal('show');


            },

            failure: function (response) {
                alert(response);
            }
        });
    }
    function ShowViewPopUp(EventActivityId) {

        $.ajax({
            type: "GET",
            url: "/Admin/EventSingleActivites/Index?handler=SingleEventActivityForView",
            data: { "EventActivityId": EventActivityId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {


                document.getElementById("EventActivityTitleId").innerHTML = response.EventActivityTitle
                document.getElementById("EventActivityDescriptionId").innerHTML = response.EventActivityDescription
                document.getElementById("EventActivityTypeId").innerHTML = response.EventActivityType
                document.getElementById("EventTitleId").innerHTML = response.EventTitle



                $('#QuickViewPoup').modal('show');

            },
            failure: function (response) {
                alert(response);
            }
        });

    }
</script>